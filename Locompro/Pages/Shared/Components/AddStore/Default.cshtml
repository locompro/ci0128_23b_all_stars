@using Locompro.Models
@using Newtonsoft.Json

@{
    var settings = new JsonSerializerSettings
    {
        ReferenceLoopHandling = ReferenceLoopHandling.Ignore
    };

    var provinces = ViewData["Provinces"] as IEnumerable<Province>;
    var provincesJson = JsonConvert.SerializeObject(provinces, settings);
}

<script>
    const provinces = JSON.parse('@Html.Raw(provincesJson)');
    
    // Function to update the canton dropdown
    function updateCantonDropdown() {
        const selectedProvinceName = document.querySelector("[name='ProvinceSelect']").value;
        const cantonDropdown = document.querySelector("[name='CantonSelect']");
        const cantonDropdownOptGroup = cantonDropdown.querySelector('optgroup');
        
        // Clear existing options within the optgroup
        while (cantonDropdownOptGroup.firstChild) {
            cantonDropdownOptGroup.removeChild(cantonDropdownOptGroup.firstChild);
        }
        
        const selectedProvince = provinces.find(p => p.Name === selectedProvinceName);
        
        // Populate canton dropdown based on selected province
        if (selectedProvince) {
            const cantons = selectedProvince.Cantons;
                    
            cantons.forEach(cantonObj => {
                const option = document.createElement("option");
                option.value = cantonObj.Name;
                option.text = cantonObj.Name;
                cantonDropdownOptGroup.appendChild(option);
            });
        }
    }
</script>

<body>
<div class="row d-flex justify-content-center">
    <div class="col-md-6 col-xl-4" style="margin-top: 20px;">
        <div class="card mb-5">
            <div class="card-body d-flex flex-column align-items-center" style="padding-bottom: 50px;">
                <div class="bs-icon-xl bs-icon-circle bs-icon-primary bs-icon my-4">
                    <i class="material-icons" style="font-size: 40px;">store</i>
                </div>
                <form class="text-center" method="post">
                    <div class="mb-3">
                        <fieldset>
                            <legend style="padding-bottom: 0px;margin-bottom: 20px;">Agregar Tienda</legend>
                        </fieldset><label class="form-label d-lg-flex justify-content-lg-start">Nombre de la tienda</label><input class="form-control" name="Name" placeholder="Nombre">
                    </div>
                    <div class="mb-3">
                        <label class="form-label d-lg-flex justify-content-lg-start">Provincia</label>
                        <select class="form-select" style="font-family:Roboto, sans-serif;" name="ProvinceSelect" onchange="updateCantonDropdown()">
                            <optgroup label="Provincia">
                                @foreach (var province in provinces)
                                {
                                    <option value="@province.Name">@province.Name</option>
                                }
                            </optgroup>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label d-lg-flex justify-content-lg-start">Cantón</label>
                        <select class="form-select" style="font-family:Roboto, sans-serif;" name="CantonSelect">
                            <optgroup label="Cantón">
                                <!-- Options will be dynamically populated here -->
                            </optgroup>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label d-lg-flex justify-content-lg-start">Teléfono</label><input class="form-control" name="Telephone" placeholder="Teléfono">
                    </div>
                    <div class="mb-3">
                        <label class="form-label d-lg-flex justify-content-lg-start">Dirección</label><textarea class="form-control" name="Address" style="margin-bottom: 0px;padding-bottom: 94px;"></textarea>
                    </div><a class="btn btn-primary d-block w-100" role="button" href="sign-in.html">Agregar tienda</a>
                </form>
            </div>
        </div>
    </div>
</div>
</body>