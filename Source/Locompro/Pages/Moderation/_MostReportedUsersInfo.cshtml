@model List<Locompro.Models.Results.MostReportedUsersResult>
@section Head
{
    <link rel="stylesheet" href="~/css/most-reported-users-table.css" asp-append-version="true"/>
}
<div class="modal-content rounded-4">
    <div class="modal-header" id="MostReportedPeopleModalHeader">
        <i class="material-icons">info</i>
        <h4 class="modal-title">&nbsp;Personas más reportadas&nbsp;&nbsp;</h4>
        <button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="modal"></button>
    </div>
    <div class="modal-body" id="MostReportedPeopleModalBody">
        <div class="card">
            <div class="card-body rounded-4">
                <div class="table-responsive" id="MostReportedPeopleTable">
                    <table class="table" aria-label=" ">
                        <thead>
                        <tr>
                            <th style="width: 10%; text-align: right">Posición</th>
                            <th style="width: 10%; text-align: right">Username</th>
                            <th style="width: 20%; text-align: right">Veces reportada</th>
                            <th style="width: 20%; text-align: right">Aportes Totales</th>
                            <th style="width: 10%; text-align: right">Calificación</th>
                        </tr>
                        
                        </thead>

                        <tbody>

                        @{
                            try
                            {
                                var position = 1;
                                foreach (var userInfo in Model)
                                {
                                    <tr>
                                        <td style="text-align: center">
                                            @Html.DisplayFor(x => position)
                                        </td>
                                        <td style="text-align: right">
                                            @Html.DisplayFor(x => userInfo.UserName)
                                        </td>
                                        <td style="text-align: center">
                                            @Html.DisplayFor(x => userInfo.ReportedSubmissionCount)
                                        </td>
                                        <td style="text-align: center">
                                            @Html.DisplayFor(x => userInfo.TotalUserSubmissions)
                                        </td>
                                        <td style="text-align: center">
                                            @Html.DisplayFor(x => userInfo.UserRating)
                                        </td>
                                    </tr>
                                    position++;
                                }
                            }
                            catch (Exception e)
                            {
                                Console.WriteLine("error loading most reported users table, description: " + e.Message);
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>