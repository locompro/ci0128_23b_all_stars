@using Locompro.Models.ViewModels
@model Locompro.Models.ViewModels.MapVm

<div>
    <div style="margin-left: 30px; display: flex">
    <i class="fa fa-map-marker" style="margin-top: 7px; font-size:40px; color: #0a53be"></i>
    <h1 class="" style="margin-left: 20px"> Seleccionar Ubicación </h1>
    </div>
    <div style="margin-left: 30px; margin-right: 30px">
        <div id="StoreModalMap"
             class="rounded-modal-map"
             style="height: 400px; border-radius: 10px 10px 10px 10px; margin-top: 20px; margin-bottom: 35px;">
        </div>
        <input type="hidden" value="0" id="latitude">
        <input type="hidden" value="0" id="longitude">
        <input type="hidden" value="" id="MapGeneratedAddress">
    </div>
    <div style="display:flex; margin-left: 30px; margin-bottom: 20px">
        <h5>Seleccione un rango de distancia en kilometros:</h5>
        <h5 id="mapDistanceSelected"
            style="margin-left: 15px"
            value=25> 25 km </h5>
    </div>
    <div style="margin-left: 30px; margin-right:30px; margin-bottom: 20px; display: flex;">
        <h5>1</h5>
        <div class="slidecontainer"
             style="width: 100%; margin-left: 15px; margin-right: 15px">
            <input type="range"
                   min="1"
                   max="50"
                   value="25"
                   class="slider"
                   id="distanceRangeSlider"
                   onchange="updateDistanceDisplay(this)">
        </div>
        <h5>50</h5>
    </div>
    
    <button class="btn btn-primary"
            id="locationSubmissionButton"
            style="border-radius: 10px 10px 10px 10px; margin-left: 30px; margin-bottom: 10px"
            onclick="window.GetModalMap().submitLocation()"
            data-bs-dismiss="modal">
        Guardar Selección
    </button>
</div>

<style>
    .slider {
      -webkit-appearance: none;
      width: 100%;
      height: 15px;
      border-radius: 5px;  
      background: #d3d3d3;
      outline: none;
      opacity: 0.7;
      -webkit-transition: .2s;
      transition: opacity .2s;
    }
    
    .slider::-webkit-slider-thumb {
      -webkit-appearance: none;
      appearance: none;
      width: 25px;
      height: 25px;
      border-radius: 50%; 
      background: #0a53be;
      cursor: pointer;
    }
    
    .slider::-moz-range-thumb {
      width: 25px;
      height: 25px;
      border-radius: 50%;
      background: #0a53be;
      cursor: pointer;
    }
</style>