@page
@using Locompro.Models.Entities
@using Locompro.Services.Domain
@model IndexModel
@inject INamedEntityDomainService<Category, string> CategoryDomainService
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
}

@{
    var categories = CategoryDomainService.GetAll().Result.ToList();
}

<!-- get the css file with main menu formats -->
<link rel="stylesheet" href="~/css/MainMenu.css" asp-append-version="true"/>
<link rel="stylesheet" href="~/assets/css/select2.min.css"/>
<link rel="stylesheet" href="~/assets/css/select2-bootstrap.min.css"/>
<link rel="stylesheet" href="~/css/custom-select2-styles.css"/>

<h1 class="d-flex justify-content-center" style="padding-top: 0px;margin-top: 180px;margin-bottom: 55px;font-size: 75px;">LoCoMPro</h1>

<div class="pt-5 d-flex justify-content-center"
     style="padding-left: 0px;margin-bottom: 3px;margin-top: -42px; margin-left: 10px; margin-right: 10px">
    <div class="d-flex row justify-content-center" style="width:90%">
        <div id="mainPageSearchGroup" class="main-page-input-group">
            <div>
                <div id="searchBar" class="justify-content-center form-actions input-group search-bar-default">
                    <div class="search-box form-control pe-4 rounded-pill input-group">
                        <div style="width: 100%; padding-right: 20px">
                            <input type="text"
                                   class="form-control rounded-pill"
                                   name="query"
                                   placeholder="Ingresar nombre de producto"
                                   required="required"
                                   style="margin-left: 0px; border: none;"
                                   id="searchBox">
                        </div>
                        <div class="input-group-prepend justify-content-center"
                             style="position: absolute; right: 0; top: 0; bottom: 0; display: flex; align-items: center; margin-right: 10px;">
                            <button class="btn btn-primary ps-2 pe-2 rounded-pill"
                                    role="button"
                                    type="submit"
                                    onclick="performIndexSearchButton()"
                                    style="height: 30px; font-size: 12px;"
                                    id="searchButton">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div id="modalContainer"
                 style="margin-left: auto; margin-right: auto;">
            </div>
            <div id="advancedSearchButtonContainer" class="advanced-search-button">
                <button class="index-advanced-search-button-initial"
                        id="advancedSearchButton">
                    Búsqueda avanzada
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/search.js"></script>
    <script src="~/js/index.js"></script>
}