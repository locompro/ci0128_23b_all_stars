@page
@using Locompro.Models
@using Locompro.Common
@model Locompro.Pages.SearchResults.SearchResultsModel

<link rel="stylesheet" href="~/css/SearchResults.css" asp-append-version="true"/>
<link rel="stylesheet" href="~/css/ImageDisplay.css" asp-append-version="true"/>


<div class="container  pt-5 search-results-page-container">
<div class="container">
<div id="inputGroup" class="justify-content-center search-input-group">
    <div id="searchBarGroup" class="justify-content-center form-actions input-group search-bar-group-default">
        <div class=" search-box form-control pe-4 rounded-pill input-group">
            <div class="search-bar-encapsulate">
                <input type="text"
                       value="@Model.SearchViewModel.ProductName"
                       class="form-control rounded-pill search-bar"
                       name="query"
                       placeholder="Ingresar nombre de producto"
                       required="required"
                       id="searchBox">
            </div>
            <div class="input-group-prepend justify-content-center search-button-inside-search-bar">
                <button class="btn btn-primary ps-2 pe-2 rounded-pill search-button-circle"
                        role="button"
                        type="submit"
                        onclick="performSearchButton()"
                        id="searchButton">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>
        <button class=" advanced-search-results-base search-results-advanced-search-button-initial btn-primary rounded-pill"
                id="advancedSearchButton"
                style="margin-left: 15px;"
                onclick="advancedSearchButtonPressed()"
                type="button">
            Búsqueda avanzada
        </button>

    </div>
    <div>
        <div id="modalContainer" class="justify-content-center">
        </div>
    </div>
    <button id="closeModalButton" class="close-modal-button-hidden" onclick="closeModal()"></button>
</div>

<div class="card border search-results-card" border="5px solid black;">
<div>
<h6> @Model.ItemsAmount resultados encontrados </h6>
<div class="table-encapsulate-for-results">
    <table class="table table-hover search-results-table">
        <thead>
        <tr>
            <th>
                <a asp-page="./SearchResults"
                   asp-route-sortOrder="@Model.NameSort"
                   asp-route-sorting=true
                   asp-route-currentFilter="@Model.CurrentFilter"
                   asp-route-query=@Model.SearchViewModel.ProductName
                   asp-route-province=@Model.SearchViewModel.ProvinceSelected
                   asp-route-canton=@Model.SearchViewModel.CantonSelected
                   asp-route-minValue=@Model.SearchViewModel.MinPrice
                   asp-route-maxValue=@Model.SearchViewModel.MaxPrice
                   asp-route-category=@Model.SearchViewModel.CategorySelected
                   asp-route-model=@Model.SearchViewModel.ModelSelected
                   asp-route-brand="@Model.SearchViewModel.BrandSelected"
                   class="no-underline-link @(Model.CurrentSort == "name_desc" ? "sort-desc" : (Model.CurrentSort == "name_asc" ? "sort-asc" : "sort-none"))">
                    Producto
                </a>
            </th>
            <th scope="col">Precio</th>
            <th scope="col" style="padding-left: 30px">Tienda</th>
            <th scope="col">Modelo</th>
            <th>
                <a asp-page="./SearchResults"
                   asp-route-sortOrder="@Model.ProvinceSort"
                   asp-route-sorting=true
                   asp-route-currentFilter="@Model.CurrentFilter"
                   asp-route-query=@Model.SearchViewModel.ProductName
                   asp-route-province=@Model.SearchViewModel.ProvinceSelected
                   asp-route-canton=@Model.SearchViewModel.CantonSelected
                   asp-route-minValue=@Model.SearchViewModel.MinPrice
                   asp-route-maxValue=@Model.SearchViewModel.MaxPrice
                   asp-route-category=@Model.SearchViewModel.CategorySelected
                   asp-route-model=@Model.SearchViewModel.ModelSelected
                   asp-route-brand="@Model.SearchViewModel.BrandSelected"
                   class="no-underline-link @(Model.CurrentSort == "province_desc" ? "sort-desc" : (Model.CurrentSort == "province_asc" ? "sort-asc" : "sort-none"))">
                    Provincia
                </a>
            </th>
            <th>
                <a asp-page="./SearchResults"
                   asp-route-sortOrder="@Model.CantonSort"
                   asp-route-sorting=true
                   asp-route-currentFilter="@Model.CurrentFilter"
                   asp-route-query=@Model.SearchViewModel.ProductName
                   asp-route-province=@Model.SearchViewModel.ProvinceSelected
                   asp-route-canton=@Model.SearchViewModel.CantonSelected
                   asp-route-minValue=@Model.SearchViewModel.MinPrice
                   asp-route-maxValue=@Model.SearchViewModel.MaxPrice
                   asp-route-category=@Model.SearchViewModel.CategorySelected
                   asp-route-model=@Model.SearchViewModel.ModelSelected
                   asp-route-brand="@Model.SearchViewModel.BrandSelected"
                   class="no-underline-link @(Model.CurrentSort == "canton_desc" ? "sort-desc" : (Model.CurrentSort == "canton_asc" ? "sort-asc" : "sort-none"))">
                    Cantón
                </a>
            </th>
            <th scope="col">Descripción</th>
            <th scope="col">Último Aporte </th>
        </tr>
        </thead>
        <tbody>
        @{
            int index = 0;
            PaginatedList<Item> items = Model.DisplayItems;
            foreach (Item item in Model.DisplayItems)
            {
                <tr onclick="itemSelected(@index)">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td style="text-align: right; padding-left: 0px">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td style="padding-left: 30px">
                        @Html.DisplayFor(modelItem => item.Store)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Province)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Canton)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastSubmissionDate)
                    </td>
                </tr>
                index++;
            }
        }
        </tbody>
    </table>
    @{
        index = 0;
        foreach (Item item in Model.DisplayItems)
        {
            string modalName = "modal" + @index;
            <div class="modal " id="@modalName" tabindex="-1" role="dialog" aria-labelledby="productModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content" style="border-radius: 15px; padding-top: 5px; padding-bottom: 10px; padding-left: 8px; padding-right: 6px">
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-4">
                                    <h4 class="d-xxl-flex align-items-xxl-center card-title">
                                        <i class="fa fa-envelope" style="margin-right: 12px"></i>
                                        @item.Name
                                    </h4>
                                    <h4 class="d-xxl-flex align-items-xxl-center card-title" style="margin-bottom: 10px">
                                        <i class="fa fa-home" style="margin-right: 14px"></i>
                                        @item.Store
                                    </h4>
                                    <h6> Modelo: @item.Model </h6>
                                    <h6> Marca: @item.Brand </h6>
                                </div>
                                <div class="slideshow-container col-6" style="width: 416px; height: 300px; text-align: center;">
                                    <a class="prev col"
                                       style=""
                                       onclick="plusSlides(-1)">
                                        &#10094;
                                    </a>
                                    @{
                                        string pictureContainerName = @item.Name + "-" + @item.Store;
                                        string pictureContainerId = "pictureContainer" + index;
                                        <div id="@pictureContainerId" name = "@pictureContainerName" ></div>
                                    }
                                    <a class="next col" onclick="plusSlides(1)">&#10095;</a>
                                </div>
                            </div>
                            <div>
                                <div class="table-responsive d-xxl-flex table mb-0 pt-3 pe-2">
                                    <table class="table table-striped table-sm my-0 mydatatable">
                                        <thead>
                                        <tr>
                                            <th class="text-center">Fecha de aporte&nbsp;</th>
                                            <th>Precio&nbsp;</th>
                                            <th>Descripción&nbsp;</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        @foreach (Submission tempSubmit in item.Submissions)
                                        {
                                            <tr>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelSub => tempSubmit.EntryTime)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelSub => tempSubmit.Price)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelSub => tempSubmit.Description)
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            index++;
        }
    }
</div>

@{
    var prevDisabled = !Model.DisplayItems.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.DisplayItems.HasNextPage ? "disabled" : "";
}

<div class="previous-next-button-area">
    <a asp-page=""
       asp-route-query=@Model.SearchViewModel.ProductName
       asp-route-province=@Model.SearchViewModel.ProvinceSelected
       asp-route-canton=@Model.SearchViewModel.CantonSelected
       asp-route-minValue=@Model.SearchViewModel.MinPrice
       asp-route-maxValue=@Model.SearchViewModel.MaxPrice
       asp-route-category=@Model.SearchViewModel.CategorySelected
       asp-route-model=@Model.SearchViewModel.ModelSelected
       asp-route-brand="@Model.SearchViewModel.BrandSelected"
       asp-route-pageIndex="@(Model.DisplayItems.PageIndex - 1)"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-currentFilter="@Model.CurrentFilter"
       class="btn btn-primary @prevDisabled">
        Previo
    </a>

    <input type="number"
           class="number-input-pages"
           min=1
           max="@Model.DisplayItems.TotalPages"
           value="@Model.DisplayItems.PageIndex"
           onchange="changeIndexPage(this)">

    <a asp-page=""
       asp-route-query=@Model.SearchViewModel.ProductName
       asp-route-province=@Model.SearchViewModel.ProvinceSelected
       asp-route-canton=@Model.SearchViewModel.CantonSelected
       asp-route-minValue=@Model.SearchViewModel.MinPrice
       asp-route-maxValue=@Model.SearchViewModel.MaxPrice
       asp-route-category=@Model.SearchViewModel.CategorySelected
       asp-route-model=@Model.SearchViewModel.ModelSelected
       asp-route-brand="@Model.SearchViewModel.BrandSelected"
       asp-route-pageIndex="@(Model.DisplayItems.PageIndex + 1)"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-currentFilter="@Model.CurrentFilter"
       class="btn btn-primary @nextDisabled">
        Siguiente
    </a>

    <h6 class="page-amount-text"> @Model.DisplayItems.TotalPages paginas de resultados </h6>
</div>
</div>
</div>
</div>
</div>

@section Scripts {
    <script src="~/js/search-results.js"></script>
    <script src="~/js/search.js"></script>
    <script src="~/js/image-display.js"></script>

    <script>
    function changeIndexPage(field) {
        if (field.value > @Model.DisplayItems.TotalPages) {
            field.value = @Model.DisplayItems.TotalPages;
        }

        if (field.value < 1) {
            field.value = 1;
        }
        
        // if no province is selected, then it is a simple search
        const provinceForEmptyCheck = "@Model.SearchViewModel.ProvinceSelected";

        if (provinceForEmptyCheck.length === 0) {
            // redirect to search results page
            window.location.href = "/SearchResults/SearchResults?query=" + "@Model.SearchViewModel.ProductName" +
                "&pageIndex=" + field.value +
                "&sortOrder=" + "@Model.CurrentSort" +
                "&currentFilter=" + "@Model.CurrentFilter";
        } else {
            // redirect to search results page
            window.location.href =
                "/SearchResults/SearchResults?query=" + "@Model.SearchViewModel.ProductName" +
                "&province=" + "@Model.SearchViewModel.ProvinceSelected" +
                "&canton=" + "@Model.SearchViewModel.CantonSelected" +
                "&minValue=" + @Model.SearchViewModel.MinPrice +
                "&maxValue=" + @Model.SearchViewModel.MaxPrice +
                "&category=" + "@Model.SearchViewModel.CategorySelected" +
                "&model=" + "@Model.SearchViewModel.ModelSelected" +
                "&brand=" + "@Model.SearchViewModel.BrandSelected" +
                "&sortOrder=" + "@Model.CurrentSort" +
                "&currentFilter=" + "@Model.CurrentFilter" +
                "&pageIndex=" + field.value;                      
        }
    }
    </script>
    <script>
        function showPicture() {
            var modalId = "#imageModel";
            $(modalId).modal('show');
        }
    </script>
}